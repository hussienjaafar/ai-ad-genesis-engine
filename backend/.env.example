
# Server Configuration
PORT=4000
NODE_ENV=development
PUBLIC_URL=http://localhost:4000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:8080

# Database
MONGODB_URI=mongodb://localhost:27017/my_database

# JWT Auth
JWT_SECRET=change_this_to_a_random_string
JWT_REFRESH_SECRET=another_random_string_for_refresh_tokens
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OAuth
OAUTH_ENCRYPTION_KEY=32_char_string_for_oauth_token_encryption
OAUTH_STATE_SECRET=random_string_for_oauth_state

# Meta Graph API
META_CLIENT_ID=your_meta_app_id
META_CLIENT_SECRET=your_meta_app_secret
META_REDIRECT_URI=http://localhost:4000/api/oauth/meta/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/oauth/google/callback

# Cron Schedules
CRON_TOKEN_REFRESH=0 0 * * *
CRON_TOKEN_MONITOR=0 12 * * *
CRON_ETL_SCHEDULE=0 3 * * *

# Redis for BullMQ
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys (for services)
OPENAI_API_KEY=your_openai_api_key

# Logging
LOG_LEVEL=info

# Email sending
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=no-reply@example.com
