
# MongoDB Connection
MONGODB_URI=mongodb://mongo:27017/ai_ad_system

# JWT Authentication
JWT_SECRET=super-secret-123
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Server
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:8080
API_BASE_URL=http://localhost:4000

# Production URL (required in production)
PUBLIC_URL=https://app.your-domain.com

# AI Provider
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4o
MAX_TOKENS=8000

# OAuth Integration
FB_APP_ID=facebook-app-id
FB_APP_SECRET=facebook-app-secret
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-client-secret
# IMPORTANT: Encryption key must be exactly 32 characters/bytes in length
# Generate with: openssl rand -hex 16 | cut -c1-32
OAUTH_ENCRYPTION_KEY=32-character-random-string-for-aes-256

# ETL Schedule
CRON_ETL_SCHEDULE=0 3 * * *

# Redis for state management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Prometheus metrics
METRICS_PORT=9091

# Alert Channels (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-id
ALERT_EMAIL=alerts@yourcompany.com
